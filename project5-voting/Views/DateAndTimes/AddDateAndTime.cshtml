@model project5_voting.Models.Date

@{
    ViewBag.Title = "AddDateAndTime";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}

<style>
    .col-12 {
        -ms-flex: 0 0 100%;
        flex: 0 0 100%;
        max-width: 44%;
        margin-bottom: 29px;
    }

    input.btn.btn-info {
        margin-left: -316px;
    }


    .form-label {
        font-weight: bold;
    }



    #date-time-details {
        position: absolute;
        right: 395px;
        top: 476px;
        width: 536px; /* adjust the width as needed */
        padding: 20px; /* adjust the padding as needed */
        background-color: #f9f9f9; /* change the background color if desired */
        border: 1px solid #ccc; /* adjust the border as needed */
        border-radius: 5px; /* adjust the border radius as needed */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* adjust the shadow as needed */
        text-align: right; /* align the text to the right for better readability in Arabic */
    }

        #date-time-details h1, #date-time-details h4 {
            margin: 10px 0; /* adjust the margin as needed */
        }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card" dir="rtl" style="width: 700px; margin: 20px auto;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">تحديد التاريخ والوقت</h4>
            <hr />
            <div class="row g-3">

                <div class="col-12">
                    <label for="StartDate" class="form-label">تحديد تاريخ البداية</label>
                    <input type="date" class="form-control" id="startDate" name="StartDate" />
                    @Html.ValidationMessageFor(model => model.startDate, "", new { @class = "text-danger" })
                </div>

                <div class="col-12">
                    <label for="EndDate" class="form-label">تحديد تاريخ النهاية</label>
                    <input type="date" class="form-control" id="endDate" name="EndDate" />
                    @Html.ValidationMessageFor(model => model.endDate, "", new { @class = "text-danger" })
                </div>

                <div class="col-12">
                    <label for="startTime" class="form-label">تحديد وقت البداية </label>
                    <input type="time" class="form-control" id="startTime" name="StartTime" />
                    @Html.ValidationMessageFor(model => model.startTime, "", new { @class = "text-danger" })
                </div>

                <div class="col-12">
                    <label for="EndTime" class="form-label">تحديد وقت النهاية</label>
                    <input type="time" class="form-control" id="endTime" name="EndTime" />
                    @Html.ValidationMessageFor(model => model.endTime, "", new { @class = "text-danger" })
                </div>

                <div class="col-12 text-center mt-4">
                    <input type="submit" value="إنشاء" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>


    <hr />

    <div id="date-time-details">
        <h1> تفاصيل التاريخ و الوقت الحالي </h1>
        <h4> @ViewBag.StartDate : تاريخ البداية </h4>
        <h4> @ViewBag.EndDate : تاريخ النهاية </h4>
        <h4> @ViewBag.StartTime  : وقت البداية</h4>
        <h4> @ViewBag.EndTime : وقت النهاية</h4>
    </div>
}

