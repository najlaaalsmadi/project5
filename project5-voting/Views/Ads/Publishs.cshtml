@model IEnumerable<project5_voting.Models.Ad>

@{
    ViewBag.Title = "Publishs";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">الحملات الانتخابية</h2>
    <div class="row">
        @foreach (var ad in Model)
        {
            if (ad.status == "تم نشر الاعلان")
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100" style="animation: fadeInRight 0.5s ease-in-out;">
                        <div class="row no-gutters">
                            <div class="col-md-12">
                                <img src="~/images/@ad.image" class="card-img-top" alt="Image Description">
                            </div>
                            <div class="col-md-12">
                                <div class="card-body text-right">
                                    <h5 class="card-title">@ad.name</h5>
                                    <p class="card-text">@ad.areaName</p>
                                    <p class="card-text">@ad.campaignSlagan</p>
                                    <p class="card-text">@ad.description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
